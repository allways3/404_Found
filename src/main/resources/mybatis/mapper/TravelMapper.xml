<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multi.travel_404.model.dao.TravelMapper">
    <!-- 관광지 목록 조회 (페이징 적용) -->
    <select id="getAllTravels" resultType="com.multi.travel_404.model.dto.TravelDTO">
        SELECT no, title, address FROM travel
        ORDER BY no ASC
            LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 전체 관광지 개수 조회 -->
    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*) FROM travel
    </select>
</mapper>
